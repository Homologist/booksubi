<div class="container">
  <h2 class="mt-5">Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-group w-50 mt-5">
      <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" class="form-control">
      <div class="input-group-append">
        <span for="user_email" class="input-group-text">Email</span>
      </div>
    </div>
  
    <div class="input-group w-50 mt-5">
      <input autocomplete="current-password" type="password" name="user[password]" id="user_password" class="form-control">
      <div class="input-group-append">
        <span class="input-group-text" for="user_password">Password</span>
      </div>
    </div>
  
    <div class="input-group mt-4 w-25">
      <span for="user_remember_me" class="text-center">Remember me</span>
      <input name="user[remember_me]" type="hidden" value="0"><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" class="form-control">
    </div>
  
    <div class="input-group mt-5 w-50">
      <input type="submit" name="commit" value="Log in" data-disable-with="Log in" class="form-control">
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

