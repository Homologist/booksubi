<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-group w-50 mt-5">
      <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" class="form-control">
      <div class="input-group-append">
        <span for="user_email" class="input-group-text">Email</span>
      </div>
    </div>
  
  
    <div class="input-group mt-5 w-50">
      <input type="submit" name="commit" value="Send me reset password instructions" data-disable-with="Log in" class="form-control">
    </div>
<% end %>

<%= render "devise/shared/links" %>
