<div class="container">
  <h2>Change your password</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
        <div class="input-group w-50 mt-5">
          <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" class="form-control">
          <div class="input-group-append">
            <span for="user_email" class="input-group-text">Email</span>
          </div>
        </div>
  
      <div class="input-group w-50 mt-5">
          <input autocomplete="current-password" type="password" name="user[password]" id="user_password" class="form-control">
          <div class="input-group-append">
            <span class="input-group-text" for="user_password">Password</span>
          </div>
      </div>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
    
      <div class="input-group w-50 mt-5">
        <input autocomplete="current-password" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control">
        <div class="input-group-append">
          <span class="input-group-text" for="user_password_confirmation">Password</span>
        </div>
      </div>
    
        <div class="input-group mt-5 w-50">
          <input type="submit" name="commit" value="Update" data-disable-with="Change my password" class="form-control">
        </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
